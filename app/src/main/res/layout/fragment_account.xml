<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_Image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="fill_vertical"
                android:src="@drawable/ic_baseline_supervised_user_circle_24"
                app:tint="#000000" />

            <TextView
                android:id="@+id/name_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_vertical|start"
                android:fontFamily="@font/montaga"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Login in your account or rgister"
                android:textColor="#000000"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_message"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mesages"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_baseline_message_24"
                    app:tint="#000000"
                    tools:srcCompat="@drawable/ic_baseline_message_24" />

                <TextView
                    android:id="@+id/message_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Messages"
                    android:textColor="#000000"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_faworit"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/favorite_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical|fill_vertical"
                    android:text="Favorite"
                    android:textColor="#000000"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_order"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/orders"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_baseline_reorder_24"
                    app:tint="#000000"
                    tools:srcCompat="@drawable/ic_baseline_reorder_24" />

                <TextView
                    android:id="@+id/order_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Orders"
                    android:textColor="#000000"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_setting"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_baseline_settings_applications_24"
                    app:tint="#000000"
                    tools:srcCompat="@drawable/ic_baseline_settings_applications_24" />

                <TextView
                    android:id="@+id/setting_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Settings"
                    android:textColor="#000000"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_feedback"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/feedback_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_baseline_support_agent_24"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/feedback_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Feedback"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_about"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/about_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_baseline_contact_support_24"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/about_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"

                    android:text="About"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_login_logout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/login_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_baseline_login_24"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/login_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Login"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>