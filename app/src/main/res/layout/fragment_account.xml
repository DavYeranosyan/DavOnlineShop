<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="fill_vertical|end"
                android:src="@drawable/ic_baseline_supervised_user_circle_24"
                app:tint="#000000" />

            <TextView
                android:id="@+id/name_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="clip_vertical|start"
                android:fontFamily="@font/montaga"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Login in your account or rgister"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="74dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_login_24"
                app:tint="#000000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginTop="2dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Favorite Products"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_baseline_message_24"
                    tools:srcCompat="@drawable/ic_baseline_message_24"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Messages"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_baseline_reorder_24"
                    tools:srcCompat="@drawable/ic_baseline_reorder_24"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Orders"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_baseline_favorite_border_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:text="Favorite Products" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    tools:srcCompat="@drawable/ic_baseline_settings_applications_24"
                    android:src="@drawable/ic_baseline_settings_applications_24"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Settings"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>