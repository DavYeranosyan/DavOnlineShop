<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/border_full_project"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/user_Image"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:background="#000000"
                android:src="@drawable/ic_baseline_supervised_user_circle_24"
                app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_vertical|start"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Դուք մուտք չեք գործել Ձեր հաշիվ"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/user_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="5dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:addStatesFromChildren="false"
        android:background="@color/design_default_color_background"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_full_project"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mesages"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_baseline_message_24"
                    app:tint="#000000"
                    tools:srcCompat="@drawable/ic_baseline_message_24" />

                <TextView
                    android:id="@+id/message_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Նամակեր"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_full_project"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/favorite_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical|fill_vertical"
                    android:text="Նախընտրած"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_marginBottom="30dp"-->
            <!--                android:background="@drawable/border_log"-->
            <!--                android:orientation="horizontal">-->

            <!--                <ImageView-->
            <!--                    android:id="@+id/orders"-->
            <!--                    android:layout_width="45dp"-->
            <!--                    android:layout_height="45dp"-->
            <!--                    android:layout_marginTop="5dp"-->
            <!--                    android:src="@drawable/ic_baseline_reorder_24"-->
            <!--                    app:tint="#000000"-->
            <!--                    tools:srcCompat="@drawable/ic_baseline_reorder_24" />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/order_label"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:fontFamily="@font/montaga"-->
            <!--                    android:gravity="center_vertical"-->
            <!--                    android:text="Orders"-->
            <!--                    android:textColor="#000000"-->
            <!--                    android:textSize="30sp" />-->
            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_full_project"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/orders"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_reorder_24"
                    android:tint="#000000" />

                <TextView
                    android:id="@+id/order_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Պատվերներ"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_full_project"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_settings_applications_24"
                    app:tint="#000000"
                    tools:srcCompat="@drawable/ic_baseline_settings_applications_24" />

                <TextView
                    android:id="@+id/setting_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Կարգավորումներ"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_full_project"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/feedback_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_support_agent_24"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/feedback_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Կապ օպերատորների հետ"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:background="@drawable/border_full_project"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/about_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_baseline_contact_support_24"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/about_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Ծրագրի մասին"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_full_project"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/login_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_login_24"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/login_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montaga"
                    android:gravity="center_vertical"
                    android:text="Մուտք գործել"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>