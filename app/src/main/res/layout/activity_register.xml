<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.account.authentication.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_full_project"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montaga"
                android:text="Գրանցվել"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/border_full_project"
                android:ems="10"
                android:fontFamily="@font/montaga"
                android:hint="Անուն"
                android:inputType="textPersonName"
                android:paddingLeft="3dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/surname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/border_full_project"
                android:ems="10"
                android:fontFamily="@font/montaga"
                android:hint="Ազգանուն"
                android:inputType="textPersonName"
                android:paddingLeft="3dp"
                android:textColor="#050505" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/border_full_project"
                android:ems="10"
                android:fontFamily="@font/montaga"
                android:hint="Էլ․ հասցե"
                android:inputType="textEmailAddress"
                android:paddingLeft="3dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/border_full_project"
                android:ems="10"
                android:fontFamily="@font/montaga"
                android:hint="Տարիք"
                android:inputType="number"
                android:paddingLeft="3dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/border_full_project"
                android:ems="10"
                android:fontFamily="@font/montaga"
                android:hint="Գաղտնաբառ"
                android:inputType="textPassword"
                android:paddingLeft="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#999FA3"
                    android:fontFamily="@font/montaga"
                    android:onClick="saveMe"
                    android:text="Գրանցվել"
                    android:textColor="#000000" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>